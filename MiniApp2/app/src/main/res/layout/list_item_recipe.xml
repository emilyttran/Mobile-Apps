<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumnail"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/thumnail"
        android:text="Title" />

    <TextView
        android:id="@+id/servingNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumnail"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_marginBottom="13dp"
        android:text="Serving Num" />

    <TextView
        android:id="@+id/prepTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/servingNumTextView"
        android:layout_alignBottom="@+id/servingNumTextView"
        android:layout_toStartOf="@+id/wantToMakeBtn"
        android:text="Prep Time" />

    <Button
        android:id="@+id/wantToMakeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prepTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/dietTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumnail"
        android:layout_alignStart="@+id/thumnail"
        android:background="@color/colorPrimary"
        android:text="Diet Label" />
</RelativeLayout>